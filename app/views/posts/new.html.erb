<% provide(:title, 'Create new post') %>
<h1>Create new post</h1>

<div class="row">
  <div class="span6 offset">
    <%= form_for([@town, @post]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :body %>
      <%= f.text_area :body %>

      <%= f.submit "Create new post", class: "btn btn-large btn-primary" %>
    <% end %>  
  </div>
</div>  
